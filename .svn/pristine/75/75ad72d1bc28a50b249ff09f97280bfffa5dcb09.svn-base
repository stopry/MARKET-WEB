<div class="quotationBox">
  <div class="header keyBgHeader">
    行情
  </div>
  <ul class="quotationList">
    <li feedButton class="quotationItem" *ngFor="let item of proList;index as i" [ngClass]="{up:item.changePrice>=0,down:item.changePrice<0}" (click)="toDetail(item.proId)">
      <div class="proBase fl">
        <div class="baseTop">
          <img class="proPic" [src]="item.imgUrl" alt="">
          {{item.proName}}
        </div>
        <div class="quoText clip ani">{{item.nowPrice}}</div>
      </div>
      <div class="proDetail fr">
        <div class="detailItem fl itemL">
          <dl class="itemTab">
            <div class="dt">
              <dd class="nth">今开</dd>
              <dd class="clip ani">{{item.toOpenPrice}}</dd>
            </div>
            <div class="dt">
              <dd class="nth">最高</dd>
              <dd class="highest clip ani">{{item.heightPrice}}</dd>
            </div>
            <div class="dt">
              <dd class="nth">最低</dd>
              <dd class="lowest clip ani">{{item.lowPrice}}</dd>
            </div>
          </dl>
        </div>
        <div class="detailItem fr itemR">
          <dl class="itemTab">
            <div class="dt">
              <dd>涨跌幅</dd>
              <dd class="range clip ani">{{item.changeRate}}%</dd>
            </div>
            <div class="dt">
              <dd>涨跌额</dd>
              <dd class="limit clip ani">{{item.changePrice}}</dd>
            </div>
            <div class="dt">
              <dd>成交量</dd>
              <dd class="clip ani">{{item.tranVolume}}</dd>
            </div>
          </dl>
        </div>
      </div>
    </li>
  </ul>

