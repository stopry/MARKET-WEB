function loadInfo() {
    var lock = Lock.createNew();
    if (!lock.getLock()) {
        return;
    }
    ajaxHelper.get(getUrl('user/getUserInfo'), {}, function (ret) {
        if (ret.success) {
            var userInfo = ret.obj.userInfo;
            $('#userName').html(userInfo.realName);
            $('#userId').html(userInfo.id);
            $('#userPic').attr('src', userInfo.headerUrl);
            $('#usableBalance').html(userInfo.usableBalance);
            $('#blockedBalance').html(userInfo.blockedBalance);
            $('#totalBalance').html(userInfo.blockedBalance + userInfo.usableBalance);

            localStorage.setItem('userInfo', JSON.stringify(userInfo));
        } else {
            showTips('加载账户信息异常',error);
        }
        lock.release();
    });
}