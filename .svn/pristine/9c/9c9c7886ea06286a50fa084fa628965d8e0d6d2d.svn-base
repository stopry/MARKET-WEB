<script src="../service/util.service.ts"></script>
<div class="registBox forgetPassword">
  <Header
    [title]="headerTitile"
    (onVoted)="back()">
  </Header>
  <div class="grayBgBar mt80Rem"></div>
  <form class="regForm forgetPwdForm">
    <div class="conWrap">
      <div class="inputCtr borderBot">
        <i class="leftIcon reg_mobile"></i>
        <input class="input right" autocomplete="off" name="mobile" [(ngModel)]="subDatas.mobile" placeholder="请输入手机号码" type="text">
      </div>
      <div class="inputCtr borderBot getVerCode">
        <i class="leftIcon reg_capcode"></i>
        <input class="input right" name="captCode" placeholder="请输入图形验证码" [(ngModel)]="subDatas.captchaValue" type="text">
        <div feedButton class="rightOpr getCapCode" (click)="getCaptcha()">
          <img [src]="codeUrl" style="width: 100%;height: 0.9425rem !important;"  alt="">
        </div>
      </div>
      <div class="inputCtr borderBot getMsgCode">
        <i class="leftIcon reg_vercode"></i>
        <input class="input right" name="msgCode" [(ngModel)]="subDatas.code" placeholder="请输入短信验证码" type="number">
        <div feedButton class="getVerCode" (click)="getMsgCode()" [ngClass]="{disable:!canGetVcode}">
          {{getCodeText}}
        </div>
      </div>
      <div class="inputCtr borderBot">
        <i class="leftIcon reg_pwd"></i>
        <input class="input right" name="pwd" [(ngModel)]="subDatas.newLoginPwd" placeholder="请输入新密码" type="password">
      </div>
      <div class="inputCtr borderBot">
        <i class="leftIcon reg_pwdagain"></i>
        <input class="input right" name="pwdAgain" [(ngModel)]="subDatas.passwordAgain" placeholder="请再次输入密码" type="password">
      </div>
      <div feedButton (click)="submitDatas()"  class="regBtn btn keyBtn">
        提交
      </div>
      <p class="hasAccount" routerLink="/login">返回登录</p>
    </div>
  </form>
</div>
